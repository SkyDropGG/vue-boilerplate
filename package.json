{
  "name": "vue-vuex-boilerplate",
  "description": "A Vue.js project",
  "version": "1.0.0",
  "author": "Denis Kozak",
  "private": true,
  "scripts": {
    "start": "better-npm-run dev",
    "build": "better-npm-run build"
  },
  "betterScripts": {
    "dev": {
      "command": "webpack-dev-server --hot",
      "env": {
        "NODE_ENV": "development",
        "API_URL": "http://localhost:3000",
        "PORT": 4000
      }
    },
    "build": {
      "command": "webpack --progress --hide-modules",
      "env": {
        "NODE_ENV": "production",
        "API_URL": "http://localhost:3000"
      }
    }
  },
  "dependencies": {
    "babel-preset-stage-2": "^6.24.1",
    "postcss-loader": "^2.0.5",
    "resolve-url-loader": "^2.0.2",
    "style-loader": "^0.17.0",
    "vue": "^2.2.1",
    "vue-resource": "^1.3.1",
    "vue-router": "^2.5.3",
    "vuex": "^2.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-latest": "^6.0.0",
    "better-npm-run": "^0.1.0",
    "css-loader": "^0.28.1",
    "file-loader": "^0.9.0",
    "node-sass": "^4.5.0",
    "sass-loader": "^5.0.1",
    "vue-loader": "^11.1.4",
    "vue-template-compiler": "^2.2.1",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.2.0"
  }
}
